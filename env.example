# AI Slide Generator - Environment Configuration
# Copy this file to .env and set your values

# =================================
# Databricks Configuration
# =================================

# Databricks profile name (from ~/.databrickscfg)
# Defaults to 'default' if not specified
DATABRICKS_PROFILE=default

# Alternative: Direct Databricks authentication (overrides profile)
# DATABRICKS_HOST=https://your-workspace.cloud.databricks.com
# DATABRICKS_TOKEN=your-access-token

# =================================
# LLM Configuration  
# =================================

# LLM endpoint for slide generation
# Default: databricks-claude-sonnet-4
LLM_ENDPOINT=databricks-claude-sonnet-4

# =================================
# Application Settings
# =================================

# Debug mode (true/false)
DEBUG=false

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Maximum slides per deck
MAX_SLIDES_PER_DECK=50

# Default output format
DEFAULT_OUTPUT_FORMAT=html

# =================================
# Development Settings (Optional)
# =================================

# These are deprecated but kept for backward compatibility
# GRADIO_HOST=127.0.0.1
# GRADIO_PORT=7860 
# GRADIO_SHARE=false
